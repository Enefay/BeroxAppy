@page
@using BeroxAppy.Localization
@using BeroxAppy.Web.Pages.Reservations
@using Microsoft.Extensions.Localization
@model BeroxAppy.Web.Pages.Reservations.IndexModel
@inject IStringLocalizer<BeroxAppyResource> L
@section styles {
        <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css' rel='stylesheet' />
        <link href='https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.10/index.global.min.css' rel='stylesheet' />
        <link href="~/pages/reservations/index.css" rel="stylesheet" />
}

@section scripts {
        <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
        <script src='https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@6.1.10/index.global.min.js'></script>
        <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/locales/tr.global.min.js'></script>
        <script src="~/pages/reservations/index.js" asp-append-version="true"></script>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h2>@L["Reservations"]</h2>
                <div class="page-actions">
                    <button id="newReservationBtn" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Yeni Rezervasyon
                    </button>
                    <button id="walkInBtn" class="btn btn-success">
                        <i class="fas fa-walking"></i> Adisyon (Walk-in)
                    </button>
                    <button id="todayBtn" class="btn btn-info">
                        <i class="fas fa-calendar-day"></i> Bugün
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <!-- Sol Panel - Filtreler ve Özet -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Filtreler</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Çalışan</label>
                        <select id="filterEmployee" class="form-select">
                            <option value="">Tüm Çalışanlar</option>
                            @foreach (var employee in Model.Employees)
                            {
                                    <option value="@employee.Value">@employee.Text</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Görünüm</label>
                        <select id="calendarView" class="form-select">
                            <option value="dayGridMonth">Aylık</option>
                            <option value="timeGridWeek" selected>Haftalık</option>
                            <option value="timeGridDay">Günlük</option>
                            <option value="listWeek">Liste</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Günlük Özet -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Günlük Özet</h5>
                </div>
                <div class="card-body" id="dailySummary">
                    <div class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin"></i> Yükleniyor...
                    </div>
                </div>
            </div>

            <!-- Yaklaşan Rezervasyonlar -->
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Yaklaşan Rezervasyonlar</h5>
                </div>
                <div class="card-body" id="upcomingReservations">
                    <div class="text-center text-muted">
                        <i class="fas fa-spinner fa-spin"></i> Yükleniyor...
                    </div>
                </div>
            </div>
        </div>

        <!-- Sağ Panel - Takvim -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Rezervasyon Modal -->
<div class="modal fade" id="reservationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reservationModalTitle">Yeni Rezervasyon</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="reservationForm">
                    <input type="hidden" id="reservationId" />

                    <!-- Müşteri Seçimi -->
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label">Müşteri <span class="text-danger">*</span></label>
                            <select id="customerId" class="form-select" required>
                                <option value="">Müşteri Seçin</option>
                                @foreach (var customer in Model.Customers)
                                {
                                        <option value="@customer.Value">@customer.Text</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tarih <span class="text-danger">*</span></label>
                            <input type="date" id="reservationDate" class="form-control" required />
                        </div>
                    </div>

                    <!-- Hizmet Detayları -->
                    <div class="card mb-3">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">Hizmetler</h6>
                            <button type="button" class="btn btn-sm btn-primary" id="addServiceBtn">
                                <i class="fas fa-plus"></i> Hizmet Ekle
                            </button>
                        </div>
                        <div class="card-body">
                            <div id="servicesContainer">
                                <!-- Dinamik olarak hizmetler eklenecek -->
                            </div>
                        </div>
                    </div>

                    <!-- Fiyat Bilgileri -->
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">İndirim (₺)</label>
                            <input type="number" id="discountAmount" class="form-control" min="0" step="0.01" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Ekstra Ücret (₺)</label>
                            <input type="number" id="extraAmount" class="form-control" min="0" step="0.01" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Toplam Tutar</label>
                            <input type="text" id="totalAmount" class="form-control" readonly />
                        </div>
                    </div>

                    <!-- Not -->
                    <div class="mt-3">
                        <label class="form-label">Not</label>
                        <textarea id="note" class="form-control" rows="2"></textarea>
                    </div>

                    <!-- Adisyon Checkbox -->
                    <div class="form-check mt-3">
                        <input type="checkbox" id="isWalkIn" class="form-check-input" />
                        <label class="form-check-label" for="isWalkIn">
                            Adisyon (Walk-in Müşteri)
                        </label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveReservationBtn">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Rezervasyon Detay Modal -->
<div class="modal fade" id="reservationDetailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rezervasyon Detayları</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="reservationDetailContent">
                <!-- Dinamik içerik -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" id="editReservationBtn">
                    <i class="fas fa-edit"></i> Düzenle
                </button>
                <button type="button" class="btn btn-success" id="markArrivedBtn">
                    <i class="fas fa-check"></i> Geldi İşaretle
                </button>
                <button type="button" class="btn btn-danger" id="markNoShowBtn">
                    <i class="fas fa-times"></i> Gelmedi İşaretle
                </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>

<!-- Hizmet Satırı Template -->
<template id="serviceRowTemplate">
    <div class="service-row mb-3 p-3 border rounded">
        <div class="row">
            <div class="col-md-4">
                <label class="form-label">Hizmet</label>
                <select class="form-select service-select" required>
                    <option value="">Hizmet Seçin</option>
                    @foreach (var service in Model.Services)
                    {
                            <option value="@service.Value" data-duration="0">@service.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label">Çalışan</label>
                <select class="form-select employee-select" required>
                    <option value="">Önce Hizmet Seçin</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Saat</label>
                <select class="form-select time-select" required>
                    <option value="">Önce Çalışan Seçin</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Fiyat (₺)</label>
                <input type="number" class="form-control service-price" min="0" step="0.01" />
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button type="button" class="btn btn-sm btn-danger remove-service-btn">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-12">
                <input type="text" class="form-control service-note" placeholder="Hizmet notu (opsiyonel)" />
            </div>
        </div>
    </div>
</template>