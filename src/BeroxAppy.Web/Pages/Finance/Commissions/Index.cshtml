@page
@using BeroxAppy.Enums
@using Microsoft.AspNetCore.Authorization
@using BeroxAppy.Web.Pages.Finance.Commissions
@using BeroxAppy.Localization
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<BeroxAppyResource> L

@section scripts
{
    <abp-script-bundle>
        <abp-script src="/Pages/Finance/Commissions/Index.js" />
    </abp-script-bundle>
}

<div class="container-fluid">
    <!-- Sayfa Başlığı -->
    <abp-row class="mb-3">
        <abp-column size="_8">
            <h1 class="mb-0">Komisyon Ödemeleri</h1>
            <small class="text-muted">Çalışanların bekleyen komisyonlarını yönetin</small>
        </abp-column>
        <abp-column size="_4" class="text-end">
            <abp-button id="RefreshButton" text="Yenile" icon="refresh" button-type="Primary" />
            <abp-button id="PaySelectedButton" text="Seçilenleri Öde" icon="money-bill" button-type="Success" disabled="true" />
        </abp-column>
    </abp-row>

    <!-- Özet Kartları -->
    <abp-row class="mb-4">
        <abp-column size="_4">
            <abp-card class="border-start border-warning border-4">
                <abp-card-body>
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-warning mb-1">Toplam Bekleyen</h6>
                            <h4 class="mb-0">₺@Model.Summary.TotalPendingCommissions.ToString("N2")</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x text-warning"></i>
                        </div>
                    </div>
                </abp-card-body>
            </abp-card>
        </abp-column>
        <abp-column size="_4">
            <abp-card class="border-start border-info border-4">
                <abp-card-body>
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-info mb-1">Aktif Çalışan</h6>
                            <h4 class="mb-0">@Model.Summary.ActiveEmployeeCount</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x text-info"></i>
                        </div>
                    </div>
                </abp-card-body>
            </abp-card>
        </abp-column>
        <abp-column size="_4">
            <abp-card class="border-start border-success border-4">
                <abp-card-body>
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-success mb-1">Bu Ay Ödenen</h6>
                            <h4 class="mb-0">₺@Model.Summary.ThisMonthPaidCommissions.ToString("N2")</h4>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x text-success"></i>
                        </div>
                    </div>
                </abp-card-body>
            </abp-card>
        </abp-column>
    </abp-row>

    <!-- Filtreleme -->
    <abp-row class="mb-3">
        <abp-column size="_12">
            <abp-card>
                <abp-card-body class="py-2">
                    <div class="d-flex gap-3 align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="ShowOnlyWithCommissions" checked>
                            <label class="form-check-label" for="ShowOnlyWithCommissions">
                                Sadece komisyonu olanları göster
                            </label>
                        </div>
                        <div class="vr"></div>
                        <div>
                            <label class="form-label mb-0 me-2">Minimum Tutar:</label>
                            <input type="number" id="MinAmountFilter" class="form-control d-inline-block" style="width: 120px;" min="0" step="0.01" placeholder="₺0.00">
                        </div>
                        <div>
                            <input type="text" id="EmployeeNameFilter" class="form-control" placeholder="Çalışan adı ara..." style="width: 200px;">
                        </div>
                        <abp-button id="ApplyFiltersButton" text="Filtrele" icon="filter" button-type="Outline_Primary" size="Small" />
                    </div>
                </abp-card-body>
            </abp-card>
        </abp-column>
    </abp-row>

    <!-- Çalışan Komisyonları Listesi -->
    <abp-row>
        <abp-column size="_12">
            <abp-card>
                <abp-card-header>
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-list me-2"></i>Çalışan Komisyonları
                        </h5>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="SelectAllCheckbox">
                            <label class="form-check-label" for="SelectAllCheckbox">
                                Tümünü Seç
                            </label>
                        </div>
                    </div>
                </abp-card-header>
                <abp-card-body class="p-0">
                    @if (Model.EmployeeCommissions?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0" id="CommissionsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th width="50">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="HeaderSelectAll">
                                            </div>
                                        </th>
                                        <th>Çalışan</th>
                                        <th>Bekleyen Komisyon</th>
                                        <th>Son Ödeme</th>
                                        <th>Son Ödemeden Geçen Süre</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var commission in Model.EmployeeCommissions)
                                    {
                                        <tr data-employee-id="@commission.EmployeeId" 
                                            data-employee-name="@commission.EmployeeName"
                                            data-amount="@commission.CurrentCommission"
                                            class="commission-row @(commission.CurrentCommission > 0 ? "has-commission" : "")">
                                            <td>
                                                @if (commission.CanPay)
                                                {
                                                    <div class="form-check">
                                                        <input class="form-check-input commission-checkbox" 
                                                               type="checkbox" 
                                                               value="@commission.EmployeeId"
                                                               data-amount="@commission.CurrentCommission">
                                                    </div>
                                                }
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-sm me-3">
                                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center text-white fw-bold" style="width: 40px; height: 40px;">
                                                            @commission.EmployeeName.Substring(0, Math.Min(2, commission.EmployeeName.Length)).ToUpper()
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <h6 class="mb-0">@commission.EmployeeName</h6>
                                                        <small class="text-muted">Çalışan</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                @if (commission.CurrentCommission > 0)
                                                {
                                                    <span class="fw-bold text-success fs-5">₺@commission.CurrentCommission.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">₺0.00</span>
                                                }
                                            </td>
                                            <td>
                                                @if (commission.LastPaymentDate.HasValue)
                                                {
                                                    <span>@commission.LastPaymentDate.Value.ToString("dd.MM.yyyy")</span>
                                                    <br>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Hiç ödeme yok</span>
                                                }
                                            </td>
                                            <td>
                                                @{
                                                    var daysSinceLastReset = (DateTime.Now - (commission.LastPaymentDate ?? DateTime.Now.AddDays(-30))).Days;
                                                }
                                                <span class="badge @(daysSinceLastReset > 30 ? "bg-warning text-dark" : daysSinceLastReset > 60 ? "bg-danger" : "bg-info")">
                                                    @daysSinceLastReset gün
                                                </span>
                                            </td>
                                            <td>
                                                @if (commission.CanPay)
                                                {
                                                    <span class="badge bg-success">Ödenebilir</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Ödeme Yok</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (commission.CanPay)
                                                    {
                                                        <abp-button 
                                                            text="Öde" 
                                                            icon="money-bill" 
                                                            button-type="Success" 
                                                            size="Small"
                                                            class="pay-single-btn"
                                                            data-employee-id="@commission.EmployeeId"
                                                            data-employee-name="@commission.EmployeeName"
                                                            data-amount="@commission.CurrentCommission" />
                                                    }
                                                    <abp-button 
                                                        text="Detay" 
                                                        icon="eye" 
                                                        button-type="Outline_Info" 
                                                        size="Small"
                                                        class="view-details-btn"
                                                        data-employee-id="@commission.EmployeeId" />
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-users-slash fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Çalışan bulunamadı</h5>
                            <p class="text-muted">Komisyon ödemesi yapılabilecek çalışan bulunmuyor.</p>
                        </div>
                    }
                </abp-card-body>
            </abp-card>
        </abp-column>
    </abp-row>
</div>

<!-- Tekil/Toplu Ödeme Modalı -->
<div class="modal fade" id="PayCommissionModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">
                    <i class="fas fa-money-bill me-2"></i>
                    <span id="ModalTitle">Komisyon Öde</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="PayCommissionForm">
                    <!-- Seçili Çalışanlar -->
                    <div class="mb-4">
                        <h6 class="fw-bold mb-3">Seçili Çalışanlar</h6>
                        <div id="SelectedEmployeesList" class="border rounded p-3 bg-light">
                            <!-- JavaScript ile doldurulacak -->
                        </div>
                    </div>

                    <!-- Ödeme Bilgileri -->
                    <abp-row>
                        <abp-column size="_12">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Toplam Komisyon</label>
                                <input type="text" id="TotalCommissionAmount" class="form-control form-control-lg fw-bold text-success" readonly />
                            </div>
                        </abp-column>
                        <abp-column size="_6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ödenecek Tutar *</label>
                                <input type="number" id="PaymentAmount" class="form-control form-control-lg" min="0" step="0.01" required />
                                <div class="form-text">Toplam tutardan az ödeme yapabilirsiniz</div>
                            </div>
                        </abp-column>
                        <abp-column size="_6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Ödeme Yöntemi *</label>
                                <select id="PaymentMethod" class="form-select" required>
                                    <option value="">Seçiniz</option>
                                    @foreach (var m in Enum.GetValues(typeof(PaymentMethod)).Cast<PaymentMethod>())
                                    {
                                        <option value="@( (int)m )">@m.ToString()</option>
                                    }
                                </select>
                            </div>
                        </abp-column>
                    </abp-row>



                    <!-- Ödeme Dağılımı (Toplu ödeme için) -->
                    <div id="PaymentDistribution" class="mb-3" style="display: none;">
                        <h6 class="fw-bold mb-3">Ödeme Dağılımı</h6>
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Çalışan</th>
                                        <th>Toplam Komisyon</th>
                                        <th>Ödenecek Tutar</th>
                                    </tr>
                                </thead>
                                <tbody id="DistributionTableBody">
                                    <!-- JavaScript ile doldurulacak -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>İptal
                </button>
                <button type="button" class="btn btn-success btn-lg" id="PayCommissionSaveButton">
                    <i class="fas fa-money-bill me-1"></i>
                    <span id="PayButtonText">Ödeme Yap</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Çalışan Detay Modalı -->
<div class="modal fade" id="EmployeeDetailModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user me-2"></i>
                    <span id="DetailEmployeeName">Çalışan Detayı</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="EmployeeDetailContent">
                    <!-- AJAX ile yüklenecek -->
                </div>
            </div>
        </div>
    </div>
</div>